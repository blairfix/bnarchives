<?xml version="1.0" standalone="no"?>
<!DOCTYPE html SYSTEM "entities.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:epc="http://eprints.org/ep3/control">
    <head>

	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<title><epc:pin ref="title" textonly="yes"/> - <epc:phrase ref="archive_name"/></title>
	<link rel="icon" href="{$config{rel_path}}{$config{favicon}}" type="image/x-icon"/>
	<link href="{$config{rel_path}}{$config{favicon}}" type="image/x-icon"/>
	<epc:pin ref="head"/>
    </head>
    <body>
	<epc:pin ref="pagetop"/>

	<div class="ep_tm_header ep_noprint">
	    <div class="ep_tm_site_logo">
		<a href="{$config{frontpage}}" title="{phrase('archive_name')}">
		    <img class="bn-logo" alt="{phrase('archive_name')}" src="{$config{rel_path}}{$config{site_logo}}"/>
		</a>
	    </div>

	    <!-- test -->
	    <nav class="mobile-menu">
		<label for="show-menu" class="show-menu"><span>Menu</span><div class="lines"></div></label>
		<input type="checkbox" id="show-menu" />
		<ul id="menu-test">
		    <li><a href="test">Home</a></li>
		    <li><a href="test">About</a></li>
		    <li><a href="test">Portfolio</a></li>
		    <li><a href="test">News</a></li>
		    <li><a href="test">Contact</a></li>
		</ul>
	    </nav>


	</div>


	<!-- content -->
	<div>
	    <div class="ep_tm_page_content">
		<h1 class="ep_tm_pagetitle">
		    <epc:pin ref="title"/>
		</h1>
		<epc:pin ref="page"/>
	    </div>
	</div>
	<div class="ep_tm_footer ep_noprint">
	    <div class="ep_tm_eprints_logo">
		<epc:pin ref="login_status"/>      
	    </div>
	    <epc:phrase ref="template:about_eprints"/>
	</div>
    </body>
</html>
